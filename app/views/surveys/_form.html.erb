<%= simple_form_for @survey, :html => { :class => 'form-vertical' } do |f| %>

  <fieldset>
    <legend><%= controller.action_name.capitalize %> Survey</legend>
	<p>
    <%= f.input :name %>
    </p>
    <%= f.fields_for :questions do |builder| %>
      <%= render "question_fields", :f => builder %>
    <% end %>
    <p><%= link_to_add_fields "Add Question", f, :questions %></p>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', surveys_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>